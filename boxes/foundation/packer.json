{
  "builders": [
    {
      "boot_command": [
        "<tab> text noacpi ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg PASSWORD={{ user `password` }} BOOTLOADER_PASSWORD={{ user `bootloader_password` }} HTTP_IP={{ .HTTPIP }} HTTP_PORT={{ .HTTPPort }} HYPERVISOR_IDENTIFIER={{ user `virtualbox_identifier` }}<enter>"
      ],
      "disk_size": "{{ user `disk_size` }}",
      "guest_additions_mode": "disable",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_urls": [
        "{{ user `iso_url` }}"
      ],
      "name": "{{ user `virtualbox_identifier` }}",
      "output_directory": "builds/{{ user `major_version` }}.{{ user `minor_version` }}.{{ user `patch_version` }}.{{ user `incremental_version` }}/{{ user `virtualbox_identifier` }}/",
      "shutdown_command": "/sbin/halt -h -p",
      "ssh_password": "{{ user `password` }}",
      "ssh_username": "{{ user `username` }}",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "{{ user `memory_size` }}"
        ],
        [
          "storagectl",
          "{{ .Name }}",
          "--name",
          "SATA Controller",
          "--hostiocache",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--ioapic",
          "off"
        ]
      ],
      "vm_name": "{{ user `virtualbox_identifier` }}-{{ user `group_id` }}.{{ user `artifact_id` }}-{{ user `major_version` }}.{{ user `minor_version` }}.{{ user `patch_version` }}.{{ user `incremental_version` }}"
    }
  ],
  "provisioners": [
    {
      "remote_folder": "~/",
      "scripts": [
        "../../scripts/cleanup.sh",
        "../../scripts/zero.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "artifact_id": null,
    "disk_size": null,
    "group_id": null,
    "headless": null,
    "http_directory": "www",
    "incremental_version": null,
    "iso_checksum": "9e0ee4c5d9d0371fa0c0809b487ee5bb",
    "iso_checksum_type": "md5",
    "iso_url": "http://ftp.heanet.ie/pub/centos/6/os/x86_64/images/boot.iso",
    "major_version": null,
    "memory_size": "4096",
    "minor_version": null,
    "password": "{{ env `ROOT_PASSWORD` }}",
    "bootloader_password": "{{ env `BOOTLOADER_PASSWORD` }}",
    "patch_version": null,
    "username": "root",
    "virtualbox_identifier": "virtualbox"
  }
}
